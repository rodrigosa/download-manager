<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="root-pane" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.downloadmanager.ui.MainController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="header-label" text="Antigravity Download Manager">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="urlField" promptText="Enter URL to download..." HBox.hgrow="ALWAYS" styleClass="url-field" />
                  <Button mnemonicParsing="false" onAction="#handleAddDownload" text="Add Download" styleClass="action-button" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <ListView fx:id="downloadListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" styleClass="download-list" />
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Ready" fx:id="statusLabel" styleClass="status-bar-label" />
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
